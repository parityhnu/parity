<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_gname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textColor="@color/color_first_black"
        android:text="11231231231231231232123123123123123123123123123123123123123213213123213123123123123123"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_gprcie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gname"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:maxLines="1"
        android:text="900.00"
        android:textColor="@color/color_price"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_gshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:layout_below="@id/tv_gprcie"
        android:textColor="@color/color_second_black"
        android:text="京东自营"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/iv_ic_tb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@id/tv_gcomment_sale"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/tb"/>

    <ImageView
        android:id="@+id/iv_ic_jd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@id/tv_gcomment_sale"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/jd"/>

    <ImageView
        android:id="@+id/iv_ic_tm"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@id/tv_gcomment_sale"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/tmall"/>

    <TextView
        android:id="@+id/tv_gcomment_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_gprcie"
        android:textColor="@color/color_second_black"
        android:text="有1000评价"
        android:textSize="14dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/iv_goods_image"
        android:background="@color/divider_color">
    </View>
</RelativeLayout>
